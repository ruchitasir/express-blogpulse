<h1>Create a new post</h1>

<form  method="POST" action="/articles">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" required>
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    <select name="authorId" id="author" class="form-control" required>
      <% authors.forEach(function(author) { %>
        <option value="<%= author.id %>"><%= author.getFullName() %></option>
      <% }) %>
    </select>
    <p>If your name doesn't show up, please <a href="/authors/new">sign up to be an author.</a></p>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <!-- the text area down below with id="editor" is checked by Simple mark down editor func-->
    <!--in the app.js which we have defined in layout.ejs page and it makes the text area a rich text format editor -->
     <!-- textarea with required at the end, does not work in this case-->
    <textarea type="text" class="form-control" id="editor" name="content"></textarea>
  </div>

  <div class="form-group">
    <label for="tags"> Tags</label>
    <input type="text" id="tags" name="tags" class="form-control" placeholder="comma-separated list">
  </div>

  <input type="submit" class="btn btn-primary">
</form>
  